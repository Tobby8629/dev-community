<div class=" min-h-[200px] lg: w-[32.5%] xl:w-[24.5%] bg-gray-200 p-3 mb-2 mr-2">
  <div class=" flex flex-col justify-center items-center w-[80px] h-[80px] leading-[90px] mx-auto rounded-full border-[1px] border-blue-300">
    <%= image_tag "use.svg", class: "w-10/12 m-auto h-[70%]" %>
  </div>
  <div class="text-center">
    <h3 class="mt-3 mb-1 transform-capitalize"><%= user.name %> </h3>
    <h5 class="font-bold"><%= user.profile_title%></h5>
    <p class="text-blue-700 font-semibold font-sm"><%=user.email%></p>
  </div>
  <div class="w-10/12 mx-auto my-5">
    <button class="bg-blue-900 w-full p-3 rounded-md">
      <%= link_to "view profile", members_path(user),  class:" text-white capitalize font-xl" %>
    </button>
  </div>
</div>
