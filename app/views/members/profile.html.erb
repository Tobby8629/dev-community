<div>
  <%= render "user_profile", user: current_user %>
  <%= render "user_about", user: current_user %>
  <div id="experience_list" class="w-[60%] relative py-10 p-8 my-5 mx-auto rounded-md border-2">
    <%if current_user.work_experiences.empty?%>
      <p>user has no experience</p>
      <%else%>
      <%= render partial: "members/partial/experience", collection: current_user.work_experiences, as: :experience, locals: {user: current_user} %>
    <%end%>
     <div class="absolute right-[15px] top-[15px] text-blue-400">
      <%= link_to "edit", new_work_experience_path, data: { controller: "user-detail"} %>
    </div>
  </div>
  <%=turbo_frame_tag id="modal" do%>
  <%end%>
</div>
